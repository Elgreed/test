<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/text_border"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:text="Ivanov Ivan"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:inputType="phone"
        android:padding="10dp"
        android:text="+79999999999"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phone"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text="ex@mail.ru"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/password"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_below="@+id/mail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:text="ex@mail.ru"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/con_password"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:text="ex@mail.ru"
        tools:ignore="TextFields" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/con_password"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="By ticking this box, you agree to our Terms and conditions and private policy"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_marginStart="60dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/grey"
        android:text="Sign Up" />


</RelativeLayout>

